{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "krome-app",
  "version": "0.1.0",
  "identifier": "com.krome-app.app",
  "build": {
    "beforeDevCommand": "cd app && npm i && npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd app && npm i && npm run build",
    "frontendDist": "./app/dist"
  },
  "app": {
    "windows": [
      {
        "title": "ESPLR",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
